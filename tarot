    <script>
        // 1. OPEN INVITATION LOGIC
        function openInvitation() {
            const cover = document.getElementById('cover');
            const music = document.getElementById('bg-music');
            
            // Slide up cover
            cover.classList.add('open');
            
            // Play music
            music.play();
            
            // Trigger animations after cover is gone
            setTimeout(() => {
                checkScroll();
            }, 500);
        }

        // 2. MUSIC TOGGLE
        function toggleMusic() {
            const music = document.getElementById('bg-music');
            const icon = document.getElementById('music-icon');
            
            if (music.paused) {
                music.play();
                icon.classList.remove('fa-play');
                icon.classList.add('fa-music');
                // Add pulse animation back
                document.querySelector('.music-control').style.animation = "pulse 2s infinite";
            } else {
                music.pause();
                icon.classList.remove('fa-music');
                icon.classList.add('fa-play');
                // Stop pulse
                document.querySelector('.music-control').style.animation = "none";
            }
        }

        // 3. SCROLL ANIMATION (Intersection Observer)
        const observerOptions = {
            threshold: 0.2
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('aos-animate');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.aos-init').forEach(el => {
            observer.observe(el);
        });

        // Helper to trigger animation on load if opened
        function checkScroll() {
            document.querySelectorAll('.aos-init').forEach(el => {
                const rect = el.getBoundingClientRect();
                if(rect.top < window.innerHeight && rect.bottom >= 0) {
                    el.classList.add('aos-animate');
                }
            });
        }

        // 4. COUNTDOWN TIMER
        // Set tanggal acara di sini (Format: Tahun, Bulan (0-11), Hari)
        const weddingDate = new Date(2024, 11, 25, 8, 0, 0).getTime();

        const timer = setInterval(function() {
            const now = new Date().getTime();
            const distance = weddingDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("days").innerText = days;
            document.getElementById("hours").innerText = hours;
            document.getElementById("minutes").innerText = minutes;
            document.getElementById("seconds").innerText = seconds;

            if (distance < 0) {
                clearInterval(timer);
                document.getElementById("countdown").innerHTML = "<h3>Acara Telah Dimulai!</h3>";
            }
        }, 1000);
    </script>
