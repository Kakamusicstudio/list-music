<body>

    <!-- HALAMAN DEPAN: TOMBOL AJA -->
    <div id="landing-page">
        <h1><i class="fas fa-video"></i> Kaka Live Room</h1>
        <p>Kaka Music Game Studio.</p>
        <button class="btn-enter" onclick="autoJoin()">Masuk LIVE</button>
    </div>

    <!-- CONTAINER VIDEO -->
    <div id="jitsi-container"></div>

    <!-- Script Jitsi -->
    <script src="https://meet.jit.si/external_api.js"></script>

    <script>
        // ========================================
        // PENGATURAN RUANGAN (BISA DIGANTI DISINI)
        // ========================================
        const KODE_RUANGAN_TETAP = "Kaka Studio"; 
        // Catatan: Semua orang masuk ke "Kaka Studio".
        // Jika ingin ganti ruangan baru, ubah teks di atas lalu simpan file.
        // ========================================

        function autoJoin() {
            // 1. Generate Nama Tamu Otomatis (Agar unik)
            const randomNum = Math.floor(Math.random() * 9000) + 1000;
            const namaTamu = "Tamu-" + randomNum;

            // 2. Sembunyikan tombol masuk
            const landing = document.getElementById('landing-page');
            landing.style.opacity = '0';
            setTimeout(() => {
                landing.style.display = 'none';
            }, 500);

            // 3. Tampilkan Video
            const container = document.getElementById('jitsi-container');
            container.style.display = 'block';

            // 4. Jalankan Jitsi dengan Data Otomatis
            const domain = "meet.jit.si";
            const options = {
                roomName: KODE_RUANGAN_TETAP,
                width: "100%",
                height: "100%",
                parentNode: document.querySelector('#jitsi-container'),
                userInfo: {
                    displayName: namaTamu
                },
                configOverwrite: {
                    startWithAudioMuted: false,
                    startWithVideoMuted: false,
                    prejoinPageEnabled: false // Langsung masuk tanpa konfirmasi lagi
                },
                interfaceConfigOverwrite: {
                    SHOW_JITSI_WATERMARK: false,
                    DEFAULT_BACKGROUND: '#0f172a',
                    // Hapus tombol-tombol yang tidak perlu agar simpel
                    toolbarButtons: [
                        'microphone', 'camera', 'closedcaptions', 'desktop', 'fullscreen',
                        'fodeviceselection', 'hangup', 'profile', 'chat', 'recording',
                        'livestreaming', 'etherpad', 'sharedvideo', 'settings', 'raisehand',
                        'videoquality', 'filmstrip', 'invite', 'feedback', 'stats', 'shortcuts',
                        'tileview', 'videobackgroundblur', 'download', 'help', 'mute-everyone', 'security'
                    ]
                }
            };

            const api = new JitsiMeetExternalAPI(domain, options);
        }
    </script>
