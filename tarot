    <!-- 2. JITSI IFRAME CONTAINER -->
    <div id="jitsi-container"></div>

    <!-- Script Jitsi External API -->
    <script src="https://meet.jit.si/external_api.js"></script>

    <script>
        const domain = "meet.jit.si";
        let options;
        let api;

        function startMeeting() {
            const username = document.getElementById('username').value.trim();
            const roomname = document.getElementById('roomname').value.trim();

            // Validasi Input
            if (!username || !roomname) {
                alert("Mohon isi Nama dan Nama Ruangan!");
                return;
            }

            // Hilangkan karakter spesial untuk nama room yang aman di URL
            const safeRoomName = roomname.replace(/[^a-zA-Z0-9-_]/g, "");

            // Sembunyikan Login
            const loginSection = document.getElementById('login-section');
            loginSection.style.opacity = '0';
            setTimeout(() => {
                loginSection.style.display = 'none';
            }, 500);

            // Tampilkan Container
            const container = document.getElementById('jitsi-container');
            container.style.display = 'block';

            // Konfigurasi Jitsi
            options = {
                roomName: safeRoomName,
                width: "100%",
                height: "100%",
                parentNode: document.querySelector('#jitsi-container'),
                userInfo: {
                    displayName: username
                },
                configOverwrite: {
                    startWithAudioMuted: false,
                    startWithVideoMuted: false,
                    prejoinPageEnabled: false, // Langsung masuk room
                    // Sembunyikan beberapa elemen Jitsi agar terlihat seperti app sendiri
                    toolbarButtons: [
                        'microphone', 'camera', 'closedcaptions', 'desktop', 'fullscreen',
                        'fodeviceselection', 'hangup', 'profile', 'chat', 'recording',
                        'livestreaming', 'etherpad', 'sharedvideo', 'settings', 'raisehand',
                        'videoquality', 'filmstrip', 'invite', 'feedback', 'stats', 'shortcuts',
                        'tileview', 'videobackgroundblur', 'download', 'help', 'mute-everyone', 'security'
                    ]
                },
                interfaceConfigOverwrite: {
                    // Menghilangkan watermark dan brand Jitsi
                    SHOW_JITSI_WATERMARK: false,
                    SHOW_WATERMARK_FOR_GUESTS: false,
                    DEFAULT_BACKGROUND: '#0f172a', // Warna background sesuai tema
                    // Mengatur posisi filmstrip (video kecil) di mobile
                    FILM_STRIP_ONLY: false 
                }
            };

            // Jalankan Jitsi
            api = new JitsiMeetExternalAPI(domain, options);

            // Event Listeners Opsional (Bisa tambahkan logika disini)
            api.addEventListeners({
                readyToClose: function () {
                    alert("Meeting ditutup");
                    location.reload();
                },
                participantLeft: function (response) {
                    console.log("Participant left", response);
                },
                participantJoined: function (response) {
                    console.log("Participant joined", response);
                },
                videoConferenceJoined: function (response) {
                    console.log("Local user joined", response);
                },
                videoConferenceLeft: function () {
                    console.log("Local user left");
                    location.reload();
                }
            });
        }
    </script>
</body>
